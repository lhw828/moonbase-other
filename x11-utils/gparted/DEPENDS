optional_depends dosfstools    ""  "" "for MS-DOS filesystem support"
optional_depends xfsprogs      ""  "" "for XFS filesystem support"
optional_depends ntfs-3g       ""  "" "for NTFS filesystem support"
optional_depends reiserfsprogs ""  "" "for Reiser filesystem support"
optional_depends jfsutils      ""  "" "for JFS filesystem support"

