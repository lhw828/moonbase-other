depends xprop

optional_depends scrot \
    "--enable-scrot" \
    "--disable-scrot" \
    "for screenshot support"
  
optional_depends curl \
    "--enable-curl" \
    "--disable-curl" \
    "for screenshot uploading"
   
optional_depends xrandr \
    "--enable-xrandr" \
    "--disable-xrandr" \
    "for resolution details"
    
optional_depends feh \
    "--enable-feh" \
    "--disable-feh" \
    "for wallpaper info support (not needed if using Xfce,Gnome,Cinnamon,or MATE)"
