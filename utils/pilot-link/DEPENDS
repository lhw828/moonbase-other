depends tk

optional_depends popt          ""                       "--with-included-popt" "Use system popt" y
optional_depends libpng        "--with-libpng=/usr"     "--without-libpng"     "Enables PNG userland support" y
optional_depends python2       "--with-python"          "--without-python"     "for Python scripting support"
optional_depends perl          "--with-perl"            "--without-perl"       "for perl scripting support"
optional_depends %BLUEZ        "--with-bluez"           "--without-bluez"      "for bluetooth support"
optional_depends %JAVA_SDK     "--with-java=$JAVA_HOME" "--without-java"       "for java support"
optional_depends libusb-compat "--enable-libusb"        "--disable_libusb"     "Enables faster syncing" y
