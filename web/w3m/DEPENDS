depends gc
depends xdg-utils
depends ncurses
depends zlib

optional_depends imlib2 \
                 "--with-imagelib=imlib2" "" \
		 "for image support"

optional_depends %OSSL \
                 "--with-ssl=/usr" \
		 "--without-ssl" \
		 "for SSL support"

optional_depends libXext "" "" "for image support in X"
