          MODULE=avidemux
         VERSION=2.7.1
          SOURCE=$MODULE\_$VERSION.tar.gz
      SOURCE_URL=$SFORGE_URL/$MODULE
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$MODULE\_$VERSION
      SOURCE_VFY=sha256:3ccd784a329c8957c6741923549fdfb70f3b96d087aeb514f3d52e1cd281e995
