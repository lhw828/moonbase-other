# for gtk+-3 based install
depends openbox
depends lxde-common

optional_depends lxsession       ""  ""  "a session manager"
optional_depends lxpanel         ""  ""  "a desktop panel"
optional_depends lxtask          ""  ""  "a task manager"
optional_depends lxinput         ""  ""  "a keyboard and mouse manager"
optional_depends lxterminal      ""  ""  "a VTE terminal"
optional_depends lxrandr         ""  ""  "a XRandr GUI frontend"
optional_depends pcmanfm         ""  ""  "a filemanager"
optional_depends lxde-icon-theme ""  ""  "a LXDE icons theme"
optional_depends openbox-themes  ""  ""  "more themes for Openbox WM"
optional_depends lxappearance    ""  ""  "a theme switcher"
optional_depends gtknetcat       ""  ""  "a nc frontend"

optional_depends lxappearance-obconf "" "" "a plugin for lxappearance to config openbox"

# depend on gtk+-2
optional_depends obconf   "" "" "openbox config application (depends on gtk+-2)"
optional_depends gpicview "" "" "an image viewer (depends on gtk+-2)"
optional_depends lxnm     "" "" "a network manager (depends on gtk+-2)"
