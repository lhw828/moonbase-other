mquery SPLASH     "Build Splash graphics backend? (evas_generic_loaders and cups-filters need it)" y \
                  "-DENABLE_SPLASH=ON" \
                  "-DENABLE_SPLASH=OFF"

mquery CPPWRAPPER "Build poppler cpp wrapper? (cups-filters needs it)" y \
                  "-DENABLE_CPP=ON" \
                  "-DENABLE_CPP=OFF"

mquery UTILS      "Build command line utils?" y \
                  "-DENABLE_UTILS=ON" \
                  "-DENABLE_UTILS=OFF"

mquery CMYK       "Enable CMYK rasterization?" y \
                  "-DSPLASH_CMYK=ON" \
                  "-DSPLASH_CMYK=OFF"
